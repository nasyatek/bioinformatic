        <td>0</td>
        <td>0</td>
      </tr>
    </table>
  </div>
  <div class="left3">
    <form action="/welcome/index">
      <h2>seq giriniz</h2>
      <%= form_for :anything, url: "welcome/index" do |form| %>
        <%= form.text_area :name %>
        <br>
        <%= form.submit %>
      <% end %>
    </form>
    <input type="button" value="ReadMe" onclick="getCellValues()" style="cursor:cell ">
  </div>
</div>
<script>
    function getCellValues() {
        var table = document.getElementById('mytable');
        for (var r = 0, n = table.rows.length; r < n; r++) {
            for (var c = 0, m = table.rows[r].cells.length; c < m; c++) {
                if (r == 2 && c == 0) {
                    alert(table.rows[r].cells[c].innerHTML);
                    table.rows[r].cells[c].bgColor="Yellow";
                }
            }
        }
    }
</script>



