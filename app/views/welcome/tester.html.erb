<div class="wrapper">
  <div class="left1">
    <table style="empty-cells: show">
      <tr>
        <th></th>
        <th>&nbsp;</th>
      </tr>
      <% a = 0 %>
      <% @sequence1.each_char do |c| %>
        <tr>
          <td><%= c %></td>
          <td><%= a %></td>
        </tr>
        <% a = a + (-10) %>
      <% end %>
    </table>
  </div>
  <div class="left2">
    <table id="mytable">
      <tr>
        <% @sequence2.each_char do |c| %>
          <th><%= c %></th>
        <% end %>
      </tr>
      <tr>
        <td>-10</td>
        <td>-20</td>
        <td>-30</td>
        <td>-10</td>
